<h1>List of users</h1>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
          
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.private %>
        </td>
        
        <td>
          <form action="/insert_follow_request" method="post">
            <input type="hidden" name="query_recipient_id" value="91">

            <button>
              Follow
            </button>
          </form>
      </td>

        <td>
          <a href="/users/<%= a_user.username %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
